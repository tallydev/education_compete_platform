<div class="row">
  <div class="col-sm-12">
    <div class="nest">
      <div class="tool-bar pull-right">
        <%= link_to new_admin_activity_path, remote: true, format: :js, :class => 'btn btn-primary' do %>
          <i class="glyphicon glyphicon-plus"></i>创建
        <% end %>
      </div>
      <div class="body-nest">
        <!-- <p class="lead well">
          
        </p> -->
        <table class="table table-bordered table-hover table-striped">
          <thead>
            <tr>
              <th>赛事名称</th>
              <th>开始时间</th>
              <th>结束时间</th>
              <th>状态</th>
              <th>创建时间</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @activities.each do |item| -%>
            <tr>
              <td><%= item.name -%></td>
              <td><%= item.start_time.strftime('%F %H:%M') -%></td>
              <td><%= item.end_time.strftime('%F %H:%M') -%></td>
              <td><%= item.status -%></td>
              <td><%= item.created_at.strftime('%F %H:%M') -%></td>
              <td></td>
            </tr>
            <% end -%>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="6">
                <div class="pagination pagination-centered">
                  <div class='row'><%= will_paginate @activities, :renderer => BootstrapPagination::Rails ,:remote => {:update => 'messages'} %></div>
                </div>
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>

<div id="activityModalContent">
  
</div>
