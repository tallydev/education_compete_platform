<div class="row">
  <div class="col-sm-12">
    <div class="nest">
      <div class="title-alt">
        <h6>参赛选手</h6>
      </div>
      <div class="body-nest">
        <table class="table table-bordered table-hover table-striped">
          <thead>
            <tr>
              <th>姓名</th>
              <th>手机</th>
              <th>性别</th>
              <th>职位</th>
              <th>学历</th>
              <th>专业</th>
              <th>学校</th>
              <th>创建时间</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| -%>
            <tr>
              <th><%= user.player_info.try(:name) -%></th>
              <th><%= user.phone -%></th>
              <th><%= user.player_info.try(:sex) == "male" ? '女' : '男' -%></th>
              <th><%= user.player_info.try(:professional_title) -%></th>
              <th><%= user.player_info.try(:degree) -%></th>
              <th><%= user.player_info.try(:special) -%></th>
              <th><%= user.school.try(:name) -%></th>
              <th><%= user.player_info.created_at.strftime('%F %H:%M') -%></th>
              <th>
                <%= link_to "删除", admin_user_path(user), :method => 'delete', data: { confirm: '确定删除此选手吗？' } %>
              </th>
            </tr>
            <% end -%>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="9">
                <%= will_paginate @users, :renderer => BootstrapPagination::Rails ,:remote => {:update => 'messages'} %>
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>
