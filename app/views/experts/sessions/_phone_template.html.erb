<% content_for :title do %>
  评分入口
<% end %>

<%= render partial: "components/banner" %>

<div class="wrap">
  <div class="login">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.text_field :sign_in, label:" 专家姓名 ", required: true, autofocus: true %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: "密码" %>
      </div>

      <div class="actions">
        <%= f.submit "登录", class: "mbtn", data: { disable_with: '正在登录...' } %>
      </div>
    <% end %>
  </div>
</div>