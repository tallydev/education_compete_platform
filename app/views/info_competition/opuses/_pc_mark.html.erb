      step: 1,
      currentX: 0,
      Initialize: function (itemArray) {
          if (this.value > this.maxValue) {
              alert("给定当前值大于了最大值");
              return;
          }
          this.GetValue();
          $("#scroll_Track").css("width", this.currentX - 18 + "px");
          $("#scroll_Thumb").css("margin-left", this.currentX - 20 + "px");
          this.Value(itemArray);
          console.log('--------------');
