<%= simple_form_for([@talk_competition_activity, @talk_competition_recruit], url: talk_competition_activity_recruits_path, wrapper: :apply_horizontal_form) do |f| %>
  <%= f.error_notification %>

	<div class="form-row">
		<div class="form-left">参赛院校</div>
		<div class="form-right">
			<div class="row">
				<div class="col-md-3">
					<%= f.association :school, label: false, required: true, wrapper: :vertical_form %>
				</div>
				<div class="col-md-5">
					<%= f.input :school_person, label: "院校联系人", required: true, wrapper: :apply_form %>
				</div>
				<div class="col-md-4">
					<%= f.input :school_phone, type: "phone", label: "联系人手机", wrapper: :apply_form, required: true %>
				</div>
			</div>
		</div>
	</div>

	<hr>

	<div class="form-row">
		<div class="form-left">姓名</div>
		<div class="form-right">
			<div class="row">
				<div class="col-md-6">
					<div class="row">
						<div class="col-xs-5">
							<%= f.simple_fields_for("player_info") do |r| %>
								<%= r.input "name", label: false,required: true %>
							<% end %>
						</div>
						<div class="col-xs-7 form-sex">
							<%= f.simple_fields_for("player_info") do |r| %>
								性别：<%= r.collection_radio_buttons "sex", [[:male, '男'] ,[:female, '女']], :first, :last, required: true %>
							<% end %>
						</div>
					</div>

				</div>
				<div class="col-md-6">
					<%= f.simple_fields_for("player_info") do |r| %>
						<%= r.input "birth", label: "生日", as: :date, html5: true, wrapper: :apply_horizontal_form, required: true %>
					<% end %>
				</div>
			</div>
		</div>
	</div>

	<div class="form-row">
		<div class="form-left">教学工作年月</div>
		<div class="form-right">
			<div class="row">
				<div class="col-md-6">
					<%= f.input :work_time, label: false, required: true %>
				</div>
				<div class="col-md-6">
					<%= f.input :name, label: "参赛课程", required: true %>
				</div>
			</div>
		</div>
	</div>

	<div class="form-row">
		<div class="form-left">学历</div>
		<div class="form-right">
			<div class="row">
				<div class="col-md-6">
					<%= f.simple_fields_for("player_info") do |r| %>
						<%= r.input "degree", label: false, required: true %>	
					<% end %>
				</div>
				<div class="col-md-6">
					<%= f.simple_fields_for("player_info") do |r| %>
						<%= r.input "nation", label: "民族", required: true %>
					<% end %>
				</div>
			</div>
		</div>
	</div>

	<div class="form-row">
		<div class="form-left">电子邮箱</div>
		<div class="form-right">
			<div class="row">
				<div class="col-md-6">
					<%= f.simple_fields_for("player_info") do |r| %>
						<%= r.input "email", label: false, required: true %>
					<% end %>
				</div>
				<div class="col-md-6">
					<%= f.simple_fields_for("player_info") do |r| %>
						<%= r.input "card_number", label: "身份证号码", required: true %>
					<% end %>
				</div>
			</div>
		</div>
	</div>

	<div class="form-row">
		<div class="form-left">职称</div>
		<div class="form-right">
			<div class="row">
				<div class="col-md-6">
					<%= f.simple_fields_for("player_info") do |r| %>
						<%= r.input "professional_title", label: false, required: true %>	
					<% end %>
				</div>
				<div class="col-md-6">
					<%= f.simple_fields_for("player_info") do |r| %>
						<%= r.input :special, label: "专业名称", required: true %>
					<% end %>
				</div>
			</div>
		</div>
	</div>

	<div class="form-row">
		<div class="form-left">主讲课程情况</div>
		<div class="form-right">
			<%= f.input :comment, as: :text, label: false, wrapper: :vertical_form, input_html: {rows: 8}, required: true %>
		</div>
	</div>

  
  <div class="text-center form-bottom">
  	<%= f.button :submit, "提交报名", class: "apply-btn" %>
  </div>
<% end %>