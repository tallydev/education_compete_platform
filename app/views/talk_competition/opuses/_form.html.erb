<% @talk_competition_recruit.id.present? ? @my_url=talk_competition_recruit_opus_path(@talk_competition_recruit, @talk_competition_opus) : @my_url=info_competition_recruit_opuses_path(@talk_competition_recruit) %>
<%= simple_form_for([@talk_competition_recruit, @talk_competition_opus], url:@my_url, wrapper: :push_horizontal_form) do |f| %>

  <div class="form-row">
    <div class="form-left">课程名称：</div>
    <div class="form-right">
      <div class="row">
        <div class="col-md-6 push-input">
          <%= f.simple_fields_for("player_info") do |r| %>
            <%= r.input "degree", label: false, required: true, disabled: true, input_html: { value: @talk_competition_recruit.try(:name)} %> 
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="form-left">参赛内容：</div>
    <div class="form-right">
      <div class="row">
        <div class="col-md-6 push-input">
            <%= f.input "content", required: true, label: false, required: true %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-row">
    <div class="form-left">说课稿：</div>
    <div class="form-right">
      <div class="row">
        <div class="col-md-4 push-input">
          <div class="label1" id="upload-file-info3">
            <% if @talk_competition_opus.note.present? %>
              <%= @talk_competition_opus.note.file_file_name %>
            <% else %>
              选择文件
            <% end %>
          </div>
        </div>
        <div class="pull-left layout-type">
          <label class="type-text">.pdf</label>
        </div>
        <div class="col-md-2">
          <label class="btn btn-push">
            上传
            <span style="display:none;">
              <%= f.simple_fields_for :note_attributes do |r| %>
                <% if @talk_competition_opus.note.present? %>
                  <%= r.file_field :file, label: false, accept: 'application/pdf', onchange:'$("#upload-file-info3").html($(this).val());$("#upload-file-info3").css({color:"#3D96D5"})' %>
                <% else %>
                  <%= r.file_field :file, label: false, accept: 'application/pdf', required: true, onchange:'$("#upload-file-info3").html($(this).val());$("#upload-file-info3").css({color:"#3D96D5"})' %>
                <% end %>
              <% end %>
            </span>
          </label>
        </div>
      </div>
      <div class="text-center warning_text warning_text_two">
        <%= image_tag "warning.svg" %>上传说明：请先将文档转成PDF格式后再上传
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="form-left">PPT：</div>
    <div class="form-right">
      <div class="row">
        <div class="col-md-4 push-input">
          <div class="label1" id="upload-file-info4">
            <% if @talk_competition_opus.ppt.present? %>
              <%= @talk_competition_opus.ppt.file_file_name %>
            <% else %>
              选择文件
            <% end %>
          </div>
        </div>
        <div class="pull-left layout-type">
          <label class="type-text">.pdf</label>
        </div>
        <div class="col-md-2">
          <label class="btn btn-push">
            上传
            <span style="display:none;">
              <%= f.simple_fields_for :ppt_attributes do |r| %>
                <% if @talk_competition_opus.ppt.present? %>
                  <%= r.file_field :file, label: false, accept: 'application/pdf', onchange:'$("#upload-file-info4").html($(this).val());$("#upload-file-info4").css({color:"#3D96D5"})' %>
                <% else %>
                  <%= r.file_field :file, label: false, accept: 'application/pdf', required: true, onchange:'$("#upload-file-info4").html($(this).val());$("#upload-file-info4").css({color:"#3D96D5"})' %>
                <% end %> 
              <% end %>
            </span>
          </label>
        </div>
      </div>
      <div class="text-center warning_text warning_text_two">
        <%= image_tag "warning.svg" %>上传说明：请先将文档转成PDF格式后再上传
      </div>
    </div>
  </div>
  <div class="text-center form-bottom">
    <%= f.button :submit, "提  交", class: "btn_push_sure", data: {disable_with: '提交中...'} %>
  </div>
<% end %>