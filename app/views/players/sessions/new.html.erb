<div class="container">
  <div class="panel panel-default tab_cotent">

    <div class="panel-heading tab_head">
      <%= image_tag("TabTitleBg.png", class: "bg_image")%>
      <div class="tab_title_text">登 录</div>
    </div>

    <div class="panel-body tab_body row">
      <% if params[:role] == "player" %>
        <div class="col-md-6 col-md-offset-3">
          <!-- Nav tabs -->
          <ul class="nav nav-tabs login_tab_nav" role="tablist">
            <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">参赛选手</a></li>
          </ul>
          <!-- Tab panes -->
          <div class="tab-content login_tab_content">

            <div role="tabpanel" class="tab-pane active" id="home">
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <%= f.input :phone, label:" 用户名 ", placeholder: " 手机号",required: false, autofocus: true %>
                <%= f.input :password, label: "密 码", required: false %>
                <%= f.button :submit, "登 录", data: {disable_with: '登录中...'}, class: "btn-login" %>
                <div class="sign_up_text">
                  <%= link_to "注册新账号", new_player_registration_path, class: "sign_up" %>
                  <%= link_to "忘记密码?", new_player_password_path, class: "forget_pass" %></td>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% else %>
        <div class="col-md-6 col-md-offset-3">
          <!-- Nav tabs -->
          <ul class="nav nav-tabs login_tab_nav" role="tablist">
            <li role="presentation" class="active"><a href="#judge" aria-controls="judge" role="tab" data-toggle="tab">评审专家</a></li>
            <li role="presentation"><a href="#school" aria-controls="school" role="tab" data-toggle="tab">学校管理员</a></li>
            <li role="presentation"><a href="#train" aria-controls="train" role="tab" data-toggle="tab">培训管理</a></li>
          </ul>
          <!-- Tab panes -->
          <div class="tab-content login_tab_content">

            <div role="tabpanel" class="tab-pane active" id="judge">
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <%= f.input :phone, label:" 用户名 ", placeholder: " 手机号",required: false, autofocus: true %>
                <%= f.input :password, label: "密 码", required: false %>
                <%= f.button :submit, "登 录", data: {disable_with: '登录中...'}, class: "btn-login" %>
                <div class="sign_up_text">
                  <%= link_to "忘记密码?", new_player_password_path, class: "forget_pass" %></td>
                </div>
              <% end %>
            </div>

            <div role="tabpanel" class="tab-pane" id="school">
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <%= f.input :phone, label:" 用户名 ", placeholder: " 手机号",required: false, autofocus: true %>
                <%= f.input :password, label: "密 码", required: false %>
                <%= f.button :submit, "登 录", data: {disable_with: '登录中...'}, class: "btn-login" %>
                <div class="sign_up_text">
                  <%= link_to "忘记密码?", new_player_password_path, class: "forget_pass" %></td>
                </div>
              <% end %>
            </div>

            <div role="tabpanel" class="tab-pane" id="train">
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <%= f.input :phone, label:" 用户名 ", placeholder: " 手机号",required: false, autofocus: true %>
                <%= f.input :password, label: "密 码", required: false %>
                <%= f.button :submit, "登 录", data: {disable_with: '登录中...'}, class: "btn-login" %>
                <div class="sign_up_text">
                  <%= link_to "忘记密码?", new_player_password_path, class: "forget_pass" %></td>
                </div>
              <% end %>
            </div>

          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>