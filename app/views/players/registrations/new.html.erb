<div class="container">
  <div class="panel panel-default tab_cotent">
    <div class="panel-heading tab_head">
      <%= image_tag("TabTitleBg.png", class: "bg_image")%>
      <div class="tab_title_text">注 册</div>
    </div>
    <div class="panel-body tab_body row">
      <div class="col-md-6 col-md-offset-3">

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :apply_horizontal_form) do |f| %>
          <div class="form-inputs login_tab_content">
            <%= f.input :phone, label:"手机号 ", placeholder: "请输入手机号",required: false, autofocus: true %>
            <%= f.input :password, label: "密 码", placeholder: "请输入密码", required: false %>
            <%= f.input :password_confirmation, label: "密码确认", placeholder: "请再次输入密码", required: false %>

            <%= f.button :submit, "提交注册", data: {disable_with: '注册中...'}, class: "btn-signup" %>
            <div class="sign_up_text">
              <%= link_to "已有账号，立即登录", new_player_session_path, class: "sign_up" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>