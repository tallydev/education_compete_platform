<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :classify %>
    <%= f.input :picture_url %>
    <%= f.input :is_competition %>
