<p id="notice"><%= notice %></p>

<h1>Listing Player Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Appraise</th>
      <th>Task</th>
      <th>Player</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @player_tasks.each do |player_task| %>
      <tr>
        <td><%= player_task.title %></td>
        <td><%= player_task.content %></td>
        <td><%= player_task.appraise %></td>
        <td><%= player_task.task %></td>
        <td><%= player_task.player %></td>
        <td><%= link_to 'Show', player_task %></td>
        <td><%= link_to 'Edit', edit_player_task_path(player_task) %></td>
        <td><%= link_to 'Destroy', player_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

